<h1>Images</h1>

<% @images.each do |image| %>
  <%= tag.section class: 'my-5', data: {controller: 'images'} do %>
    <%= image_tag image.url, class: 'image-thumbnail rounded d-block',
            alt: image.title, data: {'action': 'click->images#getUrl'} %>
    <p> <%= image.title %> </p>
  <% end %>
<% end %>

<div class="toast-container" data-controller='toast' data-action="images:copy@window->toast#showMe">
  <div id="copyToast" class="toast" role="alert" aria-live="assertive" aria-atomic="true">
    <div class="toast-header">

      <strong class="me-auto">Bootstrap</strong>
      <small class="text-muted">just now</small>
      <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
    </div>
    <div class="toast-body">
      Text
    </div>
  </div>

</div>
